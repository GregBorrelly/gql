{
  "manifest_version": 3,
  "name": "GraphQL Network Inspector",
  "version": "1.0",
  "description": "Inspect GraphQL network requests",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["injected.js"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "devtools_page": "devtools.html"
} 