{
  "manifest_version": 3,
  "name": "GraphQL Inspector",
  "version": "1.0",
  "description": "Inspect GraphQL requests on websites",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true
  }]
} 